{
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "colors.filetypes": ["*"],
  "refactor.saveToFile": true,
  "tsserver.log": "verbose",
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },
    "ocamllsp": {
      "command": "ocamllsp",
      "rootPatterns": ["dune-project"],
      "filetypes": ["ocaml"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "Lua": {
    "diagnostics": {
      "globals": ["vim"]
    }
  },
  "java": {
    "home": "/usr/lib/jvm/java-19-openjdk",
    "format": {
      "enabled": "true",
      "onType.enabled": "true",
      "settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml"
    }
  },
  "rust-analyzer": {
    "updates.channel": "nightly",
    "cargo.allFeatures": true
  },
  "diagnostic.virtualText": true,
  "codeLens.position": "eol",
  // If you use neovim you can enable codelenses with this
  "codeLens.enable": true
}
